<%= link_to "← Back to all", fitbit_users_path %>

<div>
  <%= image_tag @fitbit_user.avatars['avatar'] %>
  <h1><%= @fitbit_user.display_name %></h1>
  <p><%= @fitbit_user.timezone %></p>
</div>

<h2>Readings</h2>

<table>
  <tr>
    <th>Recorded at</th>
    <th>Average daily steps</th>
    <th>Last 7 days' steps</th>
    <th>Lifetime steps</th>
  </tr>
  <% @fitbit_user.readings.order(id: :desc).each do |reading| %>
    <tr>
      <td>
        <%= reading.created_at %>
      </td>
      <td>
        <%= number_with_delimiter reading.average_steps %>
      </td>
      <td>
        <%= number_with_delimiter reading.last_7_days_steps %>
      </td>
      <td>
        <%= number_with_delimiter reading.lifetime_steps %>
      </td>
    </tr>
  <% end %>
</table>
